{
	"name": "electron-react-tailwind",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"author": "Rashmika Siriwardhana",
	"description": "ChatGPT clone desktop app",
	"repository": {
		"type": "git",
		"url": "https://github.com/rnsrashmika078/Chatgpt-Clone-Desktop.git"
	},
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build && electron-builder",
		"lint": "npx @biomejs/biome check --write src",
		"preview": "vite preview",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"coverage": "vitest run --coverage"
	},
	"dependencies": {
		"@monaco-editor/react": "^4.7.0",
		"@radix-ui/react-icons": "^1.3.0",
		"@radix-ui/react-slot": "^1.1.0",
		"@supabase/supabase-js": "^2.57.0",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.1",
		"dotenv": "^17.2.2",
		"electron-store": "^10.1.0",
		"electron-updater": "^6.6.2",
		"framer-motion": "^12.23.12",
		"happy-dom": "^15.7.4",
		"lucide-react": "^0.441.0",
		"monaco-editor": "^0.53.0",
		"music-metadata": "^11.8.2",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-icons": "^5.5.0",
		"react-live": "^4.1.8",
		"react-markdown": "^10.1.0",
		"react-router-dom": "^7.7.1",
		"react-syntax-highlighter": "^15.6.6",
		"tailwind-merge": "^2.5.2",
		"tailwindcss-animate": "^1.0.7",
		"uuid": "^11.1.0",
		"zustand": "^5.0.7"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.1",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/react": "^16.0.1",
		"@types/node": "^22.5.5",
		"@types/react": "^18.3.6",
		"@types/react-dom": "^18.3.0",
		"@types/react-syntax-highlighter": "^15.5.13",
		"@vitejs/plugin-react": "^4.2.1",
		"@vitest/coverage-istanbul": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"autoprefixer": "^10.4.20",
		"electron": "^38.0.0",
		"electron-builder": "^24.13.3",
		"postcss": "^8.4.47",
		"tailwindcss": "^3.4.11",
		"typescript": "^5.2.2",
		"vite": "^6.3.5",
		"vite-plugin-electron": "^0.28.6",
		"vite-plugin-electron-renderer": "^0.14.5",
		"vitest": "^3.2.4"
	},
	"main": "dist-electron/main.js",
	"build": {
		"appId": "com.electron.react.tailwind",
		"files": [
			"dist/**/*",
			"dist-electron/**/*"
		],
		"publish": [
			{
				"provider": "github",
				"owner": "rnsrashmika078",
				"repo": "Chatgpt-Clone-Desktop"
			}
		],
		"asar": true,
		"mac": {
			"target": [
				"dmg",
				"zip"
			]
		},
		"win": {
			"target": [
				"nsis",
				"zip"
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb",
				"rpm",
				"tar.gz"
			],
			"category": "Utility"
		}
	}
}
